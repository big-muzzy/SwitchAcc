@using SwitchAcc.Models
@model VLANsViewModel

@{
    ViewData["Title"] = "VLANs";
}

@if (Model != null)
{

    <table class="table table-striped">
        <thead>
            <tr>
                <th>VLAN</th>
                <th>Изменить</th>
            </tr>
        </thead>
        <tbody>
            @foreach (VLAN item in Model.VLANs)
            {
                <tr>
                    <td> @item.Name</td>
                    <td>
                        <form asp-action="Delete" method="post">
                            <a asp-action="EditVlan" class="btn btn-sm btn-warning btn-std-size" asp-route-vlanid="@item.ID">
                                Изменить
                            </a>
                            <input type="hidden" name="vlanid" value="@item.ID" /><br />
                            <button type="submit" class="btn btn-sm btn-danger btn-std-size">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div page-model="@Model.PagingInfo" page-action="Index"
         page-classes-enabled="true"
         page-class="btn" page-class-normal="btn-default" page-class-selected="btn-primary"
         class="btn-group pull-right"></div>
}
else
{
    <div class="row"><h3>Нет записей.</h3></div>
}

<div class="row">
    <a class="btn btn-primary" asp-action="EditVlan">Добавить запись</a>&nbsp;
</div>
